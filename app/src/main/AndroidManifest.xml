<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meltwin.lsw">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/rwts_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rwts_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Loading"></activity>
        <activity android:name=".widgets.TimeElementRing"></activity>
        <activity android:name=".widgets.EscapeGame"></activity>
        <activity android:name=".AlarmList"></activity>
        <activity android:name=".alarms.Poncet"></activity>
        <activity android:name=".alarms.Scene"></activity>
    </application>

</manifest>